@model List<Tank>
@{
    ViewData["Title"] = "TanksTable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tanks Table</h2>
@{ 
    if (Model.Count == 0)
    {
        <text>No tanks could be found in database.</text>
    }
    else
    {
        <table  class="table table-striped table-hover ">
            <tr>
                <th>Id</th>
                <th>Model</th>
                <th>Tank Type</th>
            </tr>
            @foreach(var tank in Model)
            {
                <tr>
                    <th>@tank.Id</th>
                    <th><a asp-area="" asp-controller="Tanks" asp-action="Details" asp-route-id="@tank.Id">@tank.Model</a></th>
                    <th>@tank.TankType.Name</th>
                </tr>
            }
        </table>
    }
}

