@model Tank
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<ul>
    <li>Model:            @Model.Model</li>
    <li>Type:             @Model.TankType.Name</li>
    <li>Release Date:     @Model.ReleaseDate.Year</li>
    <li>Date Added:       @Model.DateAdded.ToShortDateString()</li>
    <li>Number in garage: @Model.NumberInGarage</li>
</ul>

