@model List<Customer>
@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers Table</h2>
@{
    if (Model.Count == 0)
    {
        <text>No customers have been found in database.</text>
    }
    else
    {
        <table class="table table-striped table-hover ">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Birth Date</th>
                <th>Membership</th>
            </tr>
            @foreach (var customer in Model)
            {
                <tr>
                    <th>@customer.Id</th>
                    <th><a asp-area="" asp-controller="Customers" asp-action="Details" asp-route-id="@customer.Id">@customer.Name</a></th>
                    <th>
                        @if (customer.BirthDate != null)
                        {
                            <text>@customer.BirthDate.Value.Date.ToShortDateString()</text>
                        }
                    </th>
                    <th>@customer.MembershipType.Name</th>
                </tr>
            }
        </table>
    }
}